<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.leads.vf.vf_leads.ViewLeads"
    tools:showIn="@layout/activity_view_leads">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dealerCodeHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/dealer_code"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/dealerCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/leadDateHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/lead_date"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/leadDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/categoryHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/category"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/categoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/zoneHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/zone"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/zoneText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/managerHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/manager_name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/mangerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/distHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/dist"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/distText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dlNameHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/dl_name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/dlNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/touchPointHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/touch_point"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/touchPointText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/subscriberNameHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/subscriber_name"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/subscriberNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mobileNumberHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/mobile_number"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/mobileNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/countHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/count"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/countText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/altNumberHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/alternate_number"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/altNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/planHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/plan"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/planText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/secDepositHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/security_deposit"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/secDepositText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cABTCHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/capture_address_by_telecaller"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <TextView
                        android:id="@+id/cABTCText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/isApprovedHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="25dp"
                        android:gravity="center"
                        android:text="@string/is_approved"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads" />

                    <EditText
                        android:id="@+id/isApprovedEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />
                    <Spinner
                        android:id="@+id/isApprovedSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/remarkHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remark"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"
                        android:layout_marginEnd="25dp"/>

                    <EditText
                        android:id="@+id/remarkEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:hint="none"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />
                    <Spinner
                        android:id="@+id/remarkSpinner"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:textColor="@android:color/black"
                        android:textSize="10sp"
                        android:gravity="center"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/zoneFeedbackHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:text="@string/zone_feedback"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/font_size_view_leads"
                        android:layout_gravity="right"/>

                    <EditText
                        android:id="@+id/zoneFeedbackEditText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:hint="Zone FeedBack"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center">


                    <Button
                        android:id="@+id/updateBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_design_background"
                        android:gravity="center"
                        android:text="Update"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/font_size_view_leads"/>

                    <Button
                        android:id="@+id/resetBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_design_background"
                        android:gravity="center"
                        android:text="Reset"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/font_size_view_leads"/>
                </TableRow>
            </TableLayout>
        </ScrollView>
    </HorizontalScrollView>

</RelativeLayout>
